---
import Logo from "../Logo.astro";
import Burger from "./Burger.astro";
import { Icon } from "astro-icon/components";

const menuItems = [
  { label: "Inicio", url: "/" },
  { label: "¿Quiénes Somos?", url: "/quienes-somos" },
  { label: "Contacto", url: "/contacto" },
];
---

<header
  id="main-header"
  class="fixed top-2 left-1/2 z-50 flex h-(--header-height) w-full max-w-7xl -translate-x-1/2 items-center justify-center gap-2 rounded-3xl bg-white/75 shadow-lg backdrop-blur-sm"
>
  <div class="flex w-full items-center justify-between px-2 md:px-4">
    <Burger classNames="sm:hidden" />
    <Logo classNames="w-28 sm:w-32" />
    <div class="main-menu">
      <nav class="main-nav max-sm:hidden">
        <ul class="">
          {
            menuItems.map((item) => (
              <a
                class="hover:text-primary px-2 transition-colors"
                href={item.url}
              >
                {item.label}
              </a>
            ))
          }
        </ul>
      </nav>
    </div>
    <h1 class="social-menu flex items-center justify-center">
      <Icon
        name="in"
        class="text-primary hover:text-primary-dark flex h-6 w-6 items-center justify-center transition-colors duration-300"
      />
      <Icon
        name="x"
        class="text-primary hover:text-primary-dark flex h-6 w-6 items-center justify-center transition-colors duration-300"
      />
    </h1>
  </div>
</header>

