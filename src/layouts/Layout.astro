---
import "../styles/global.css";
import { Font } from 'astro:assets';

interface Props {
	title: string
	description?: string
	image?: string
}

const {
	title,
	description = 'Cádiz Film Office: Tu puerta de entrada para rodar en la provincia gaditana. Gestionamos permisos, localizaciones y logística para producciones audiovisuales en playas, pueblos blancos y ciudades históricas',
	image =""
} = Astro.props
--- 

<!doctype html>
<html lang="en">
	<head >
		<meta charset="UTF-8" />
		<meta name="description" content={description}>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Cádiz FilmOffice</title>
		<Font cssVariable="--font-body" preload />
		<Font cssVariable="--font-headings" preload />
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
